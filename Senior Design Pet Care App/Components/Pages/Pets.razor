    private async Task<byte[]> ReadFileToBytesAsync(IBrowserFile file)
    {
        // limit file size according to your needs. Here I allow up to 5MB.
        long maxBytes = 5 * 1024 * 1024;
        if (file.Size > maxBytes)
        {
            // simple handling: trim or throw; here we read up to maxBytes.
        }

        using var stream = file.OpenReadStream(maxBytes);
        using var ms = new System.IO.MemoryStream();
        await stream.CopyToAsync(ms);
        return ms.ToArray();
    }

    private string GetImageDataUrl(byte[] bytes)
    {
        var base64 = Convert.ToBase64String(bytes);
        return $"data:image;base64,{base64}";
    }

    private List<string> ParseCsv(string? csv)
    {
        if (string.IsNullOrWhiteSpace(csv)) return new List<string>();
        return csv.Split(';', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).ToList();
    }

    private string? JoinCsv(List<string> list)
    {
        if (list == null || list.Count == 0) return null;
        return string.Join(';', list.Select(s => s.Trim()));
    }

    private async Task GetAdviceAsync()
    {
        AdviceStatusMessage = null;
        GeneratedAdvice = null;

        // Basic validation: name is required in the form model
        if (string.IsNullOrWhiteSpace(FormModel.Name))
        {
            AdviceStatusMessage = "Please enter a pet name before requesting advice.";
            return;
        }

        IsGeneratingAdvice = true;

        try
        {
            // If EditingPet is null, create a DB pet first so we have an entity to attach advice to.
            if (EditingPet == null)
            {
                var email = AuthService.CurrentUser?.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value
                            ?? AuthService.CurrentUser?.Identity?.Name;
                if (string.IsNullOrWhiteSpace(email))
                {
                    AdviceStatusMessage = "Unable to determine current user.";
                    return;
                }

                var user = await Db.Users.FirstOrDefaultAsync(u => u.Email.ToLower() == email.ToLower());
                if (user == null)
                {
                    AdviceStatusMessage = "Current user not found.";
                    return;
                }

                var newPet = new Entities.Pet
                {
                    UserId = user.Id,
                    Name = FormModel.Name?.Trim() ?? "",
                    Breed = FormModel.Breed ?? "",
                    Age = FormModel.Age,
                    Height = FormModel.Height,
                    Weight = FormModel.Weight,
                    ActivityLevel = FormModel.ActivityLevel,
                    FoodsCsv = JoinCsv(FoodsList),
                    MedicationsCsv = JoinCsv(MedicationsList),
                    MostRecentVetAppointment = FormModel.MostRecentVetAppointment,
                    Notes = string.IsNullOrWhiteSpace(FormModel.Notes) ? null : FormModel.Notes,
                    PictureData = UploadedFile != null ? await ReadFileToBytesAsync(UploadedFile) : null
                };

                Db.Pets.Add(newPet);
                await Db.SaveChangesAsync();

                EditingPet = newPet;
                await LoadPetsAsync(); // refresh lists
            }

            // Build advice with all form data. Use EditingPet (which should now exist) and the current form values.
            var adviceText = await OpenAiService.GeneratePetAdviceAsync(
                petName: FormModel.Name ?? EditingPet?.Name ?? "",
                breed: FormModel.Breed ?? EditingPet?.Breed ?? "",
                age: FormModel.Age,
                height: FormModel.Height,
                weight: FormModel.Weight,
                activityLevel: FormModel.ActivityLevel.ToString(),
                foodsCsv: JoinCsv(FoodsList),
                medsCsv: JoinCsv(MedicationsList),
                mostRecentVetAppointment: FormModel.MostRecentVetAppointment,
                notes: FormModel.Notes
            );

            // Save advice to DB (update the pet entity)
            // Detach tracked instance if any
            var local = Db.Pets.Local.FirstOrDefault(p => p.Id == EditingPet.Id);
            if (local != null)
                Db.Entry(local).State = EntityState.Detached;

            var petToUpdate = await Db.Pets.FirstOrDefaultAsync(p => p.Id == EditingPet.Id);
            if (petToUpdate == null)
            {
                AdviceStatusMessage = "Failed to locate pet in DB to save advice.";
                GeneratedAdvice = adviceText;
                return;
            }

            petToUpdate.Advice = adviceText;
            Db.Pets.Update(petToUpdate);
            await Db.SaveChangesAsync();

            // Update local state to show advice
            GeneratedAdvice = adviceText;
            AdviceStatusMessage = "Advice saved.";
            // if you're editing again afterwards, make sure EditingPet shows new advice
            EditingPet.Advice = adviceText;
        }
        catch (Exception ex)
        {
            AdviceStatusMessage = $"Failed to generate advice: {ex.Message}";
        }
        finally
        {
            IsGeneratingAdvice = false;
            StateHasChanged();
        }
    }


    // form DTO to avoid EF tracked entity binding
    private class PetFormModel
    {
        [Required] public string? Name { get; set; }
        public string? Breed { get; set; }
        [Required] public int Age { get; set; }
        [Required] public decimal Height { get; set; }
        [Required] public decimal Weight { get; set; }
        [Required] public ActivityLevel ActivityLevel { get; set; } = ActivityLevel.Medium;
        public DateTime? MostRecentVetAppointment { get; set; }
        public string? Notes { get; set; }
    }
